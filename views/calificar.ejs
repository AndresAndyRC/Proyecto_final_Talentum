<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- icono -->
    <link rel="icon" href="/resources/img/Mini_icono.png">
    <!-- titulo -->
    <title>Talentum</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- css -->
    <link rel="stylesheet" href="/resources/css/cursos.css">
    <link rel="stylesheet" href="/resources/css/Info_cursos.css">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">    
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="logo-container">
                        <img src="/resources/img/Logo.png" alt="Logo" class="logo">
                    </div>
                </div>
                <div class="col-md-8 text-center">
                    <h1>OPINIÓN</h1>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="cursos">CURSOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/logout"><i class="bi bi-box-arrow-right"></i></a>
                        </li>
                    </ul>
                    <span class="navbar-text bienvenida">
                        
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <h1>Calificar Curso</h1>
        <form id="calificarForm" action="/calificarCurso/<%= curso.id %>" method="POST">
            <input type="hidden" name="id_curso" value="<%= curso.id %>">
                        <div class="mb-3">
                <label for="Calificacion" class="form-label">Calificación</label>
                <input type="number" id="Calificacion" name="Calificacion" min="1" max="5" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="Detalles" class="form-label">Detalles</label>
                <textarea id="Detalles" name="Detalles" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <input value="" type="date" id="Fecha" name="Fecha" class="form-control" required hidden>
            </div>
            <button type="submit" class="btn btn-primary">Guardar Calificación</button>
            <a href="/perfil" class="btn btn-secondary">Cancelar</a>
        </form>
        
    </div>
    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; 2024 Talentum. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">

        // Obtener la fecha actual 
        const today = new Date();
        // Formatear la fecha a "YYYY-MM-DD"
        const formattedDate = today.toISOString().split('T')[0];
        // Asignar la fecha formateada al campo de entrada
        document.getElementById('Fecha').value = formattedDate;
    </script>
</body>
</html>
