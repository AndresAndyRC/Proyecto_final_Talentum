<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- icono -->
    <link rel="icon" href="/resources/img/Mini_icono.png">
    <!-- titulo -->
    <title>Talentum</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Faculty+Glyphic&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/resources/css/Info_cursos.css">
</head>
<body>
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <div class="logo-container">
                    <img src="/resources/img/Logo.png" alt="Logo" class="logo">
                </div>
            </div>
            <div class="col-md-8 text-center">
                <h1><%= curso.nombre_curso %></h1>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="perfil">PERFIL</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="cursos">CURSOS</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/logout"><i class="bi bi-box-arrow-right"></i></a></li>
                </ul>
                <span class="navbar-text bienvenida"></span>
            </div>
        </div>
    </nav>
</header>
<main class="container my-4">
    <section class="curso row g-4">
        <div class="col-md-6">
            <div class="curso-izquierda">
                <div class="card">
                    <img src="img_curso.jpg" alt="Imagen del curso" class="card-img-top">
                    <div class="card-body">
                        <h2 class="card-title"><%= curso.nombre_curso %></h2>
                        <p class="card-text">Duración: <%= curso.duracion %></p>
                        <p class="card-text">Valor: $<%= curso.valor %></p>
                        <p class="card-text">Institución: <%= curso.institucion %></p>
                        <a href="<%= curso.URL_curso %>" class="btn btn-primary">Ver curso</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Formulario para dejar una opinión -->
    <section class="opinion">
        <h3>Deja tu opinión</h3>
        <form action="/curso/<%= curso.id %>/opinar" method="POST">
            <div class="mb-3">
                <label for="opinion" class="form-label">Tu opinión</label>
                <textarea class="form-control" id="opinion" name="opinion" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar Opinión</button>
        </form>
    </section>

    <!-- Opiniones ya enviadas -->
    <section class="comentarios mt-4">
        <h3>Comentarios</h3>
        <% comentarios.forEach(function(comentario) { %>
            <div class="comentario">
                <p><strong><%= comentario.usuario %></strong></p>
                <p><%= comentario.texto %></p>
            </div>
        <% }); %>
    </section>
</main>

<footer class="bg-dark text-white text-center py-3 mt-4">
    <div class="container">
        <p class="mb-0">&copy; 2024 Talentum. Todos los derechos reservados.</p>
    </div>
</footer>

<script src="scripts.js"></script>
</body>
</html>
