<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- icono -->
    <link rel="icon" href="/resources/img/Mini_icono.png">
    <!-- titulo -->
    <title>Talentum</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- css -->
    <link rel="stylesheet" href="/resources/css/cursos.css">
    <link rel="stylesheet" href="/resources/css/Info_cursos.css">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">    
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="logo-container">
                        <img src="/resources/img/Logo.png" alt="Logo" class="logo">
                    </div>
                </div>
                <div class="col-md-8 text-center">
                    <h1><%= curso.nombre_curso %></h1>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="perfil">PERFIL</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="cursos">CURSOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/logout"><i class="bi bi-box-arrow-right"></i></a>
                        </li>
                    </ul>
                    <span class="navbar-text bienvenida">
                        
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        <section class="curso row g-4">
            <div class="col-md-6">
                <div class="curso-izquierda">
                    <div class="card">
                        <!-- <img src="img_curso.jpg" alt="Imagen del curso" class="card-img-top"> -->
                        <div class="card-body">
                            <h2 class="card-title"><%= curso.nombre_curso %></h2>
                            <p class="card-text">Duración: <%= curso.duracion %> Horas</p>
                            <p class="card-text">Valor: $<%= curso.valor %></p>
                            <p class="card-text">Institución: <%= curso.institucion %></p>
                            <a href="<%= curso.URL_curso %>" class="btn btn-primary">Ver curso</a>
                            <a href="/calificar/<%= curso.id %>" class="btn btn-primary ms-3">Calificar</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; 2024 Talentum. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts.js"></script> 
</body>
</html>