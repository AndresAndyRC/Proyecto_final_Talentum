<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- icono -->
        <link rel="icon" href="/resources/img/Mini_icono.png">
        <!-- titulo -->
        <title>Talentum</title>
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- css -->
        <link rel="stylesheet" href="/resources/css/cursos.css">
        <link rel="stylesheet" href="/resources/css/Info_cursos.css">
        <!-- Bootstrap Icons -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
            <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Faculty+Glyphic&display=swap" rel="stylesheet">
    </head>
<body>
    
    <header class="bg-dark text-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="logo-container">
                        <img src="/resources/img/Logo.png"alt="Logo" class="logo" height="auto" width="100px">
                    </div>
                </div>
                <div class="col-md-8 text-center">
                    <h1>Talentum</h1>
                    <p class="lead mb-0">Descubre tu talento, transforma tu futuro.</p>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </header>

    <!-- Contenedor principal de la página -->
    <div class="container mt-5">
        <!-- Tarjeta para el área de administración de cursos -->
        <div class="card mt-4">
            <div class="card-header text-center">
                <h2>TU AULA</h2>
            </div>
            <div class="card-body">
                <!-- Formulario para agregar un curso -->
                <form id="formularioeditarCurso" action="/actualizarcurso/<%= curso.id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="Titulo_Curso" class="form-label">Título del Curso</label>
                        <input type="text" class="form-control" id="Titulo_Curso" name="nombre_curso"  value="<%= curso.nombre_curso %>" required>
                    </div>
                                
                    <div class="mb-3">
                        <label for="Url_Curso" class="form-label">Ruta Web</label>
                        <input type="url" class="form-control" id="Url_Curso" name="URL_curso"  value="<%= curso.URL_curso %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="duracion_Curso" class="form-label">Duración del Curso</label>
                        <input type="number" class="form-control" id="duracion_Curso" name="duracion"  value="<%= curso.duracion %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="valor_Curso" class="form-label">Valor</label>
                        <input type="number" class="form-control" id="valor_Curso" name="valor"  value="<%= curso.valor%>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="institucion" class="form-label">Institución</label>
                        <input type="text" class="form-control" id="institucion" name="institucion" value="<%= curso.institucion %>" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Editar Curso</button>
                </form>
                    
               
                    
                    
                
                <hr>
                
                <a href="/adminCursos" class="btn btn-secondary">Ver Cursos</a>

                
            </div>
        </div>
    </div>
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; 2024 Talentum. Todos los derechos reservados.</p>
        </div>
    </footer>
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts.js"></script>
</body>
</html>