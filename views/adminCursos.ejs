<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="../images/Mini_icono.png">
    <title>Administrar cursos</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- jQuery y Popper.js (dependencias de Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    
    <!-- JavaScript personalizado -->
    <script src="main.js"></script>
</head>
<body>
    
    <header class="bg-dark text-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="logo-container">
                        <img src="../images/Logo.png" alt="Logo" class="logo" height="auto" width="100px">
                    </div>
                </div>
                <div class="col-md-8 text-center">
                    <h1>Talentum</h1>
                    <p class="lead mb-0">Descubre tu talento, transforma tu futuro.</p>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </header>

    <!-- Contenedor principal de la página -->
    <div class="container mt-5">
        <!-- Tarjeta para el área de administración de cursos -->
        <div class="card mt-4">
            <div class="card-header text-center">
                <h2>TU AULA</h2>
            </div>
            <div class="card-body">
                <!-- Tabla para listar los cursos -->
                <h3>Lista de Cursos</h3>
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Título del Curso</th>
                            <th>Ruta Web</th>
                            <th>Duración</th>
                            <th>Valor</th>
                            <th>Institución</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof cursos !== 'undefined' && cursos && cursos.length > 0) { %>
                            <% cursos.forEach(curso => { %>
                                <tr>
                                    <td><%= curso.nombre_curso %></td>
                                    <td><%= curso.URL_curso %></td>
                                    <td><%= curso.duracion %></td>
                                    <td><%= curso.valor %></td>
                                    <td><%= curso.institucion %></td>
                                    <td>
                                        <a href="/editarcurso/<%= curso.id %>" class="btn btn-primary">Editar</a>
                                        <a href="/eliminarCurso/<%= curso.id %>" class="btn btn-danger">Eliminar</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6">No hay cursos disponibles</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                
                
                <hr>
                
                <button class="btn btn"><a href="admin">Añadir Curso</a></button>
                
            </div>
        </div>
    </div>
    <footer class="bg-dark text-white text-center p-3 mt-4">
        <p>&copy; 2024 Talentum, Todos los derechos reservados.</p>
    </footer>
</body>
</html>
