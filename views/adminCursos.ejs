<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- icono -->
        <link rel="icon" href="/resources/img/Mini_icono.png">
        <!-- titulo -->
        <title>Talentum</title>
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- css -->
        <link rel="stylesheet" href="/resources/css/Info_cursos.css">
        <!-- Bootstrap Icons -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Faculty+Glyphic&display=swap" rel="stylesheet">
    </head>
<body>
    
    <header class="bg-dark text-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="logo-container">
                        <img src="/resources/img/Logo.png" alt="Logo" class="logo" height="auto" width="100px">
                    </div>
                </div>
                <div class="col-md-8 text-center">
                    <h1>Talentum</h1>
                    <p class="lead mb-0">Descubre tu talento, transforma tu futuro.</p>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
           
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="admin">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/logout"><i class="bi bi-box-arrow-right"></i></a>
                        </li>
                    </ul>
                    <span class="navbar-text bienvenida">
                        
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container mt-5">
            <!-- Tarjeta para el área de administración de cursos -->
            <div class="card mt-4">
                <div class="card-header text-center">
                    <h2>TU AULA</h2>
                </div>
                <div class="card-body">
                    <!-- Tabla para listar los cursos -->
                    <h3>Lista de Cursos</h3>
                    <table class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Título del Curso</th>
                                <th>Ruta Web</th>
                                <th>Duración</th>
                                <th>Valor</th>
                                <th>Institución</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof cursos !== 'undefined' && cursos && cursos.length > 0) { %>
                                <% cursos.forEach(curso => { %>
                                    <tr>
                                        <td><%= curso.nombre_curso %></td>
                                        <td><%= curso.URL_curso %></td>
                                        <td><%= curso.duracion %></td>
                                        <td><%= curso.valor %></td>
                                        <td><%= curso.institucion %></td>
                                        <td>
                                            <a href="/editarcurso/<%= curso.id %>" class="btn btn-warning">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a href="/eliminarCurso/<%= curso.id %>" class="btn btn-danger">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6">No hay cursos disponibles</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    
                    
                    <hr>
                    
                    <button class="btn btn"><a href="admin">Añadir Curso</a></button>
                    
                </div>
            </div>
        </div>
    </main>
    
    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; 2024 Talentum. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts.js"></script>
    
</body>
</html>
