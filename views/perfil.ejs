<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- icono -->
    <link rel="icon" href="/resources/img/Mini_icono.png">
    <!-- titulo -->
    <title>Talentum</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- css -->
    <link rel="stylesheet" href="/resources/css/cursos.css">
    <link rel="stylesheet" href="/resources/css/Info_cursos.css">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">    
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="logo-container">
                        <img src="/resources/img/Logo.png" alt="Logo" class="logo">
                    </div>
                </div>
                <div class="col-md-8 text-center">
                    <h1><%= usuario.nickname %></h1>
                    <p class="lead mb-0">TE DAMOS LA BIENVENIDA</p>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="cursos">CURSOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/logout"><i class="bi bi-box-arrow-right"></i></a>
                        </li>
                    </ul>
                    <span class="navbar-text bienvenida">
                        
                    </span>
                </div>
            </div>
        </nav>
    </header>
        <main class="container my-4 text-center">
            <section class="curso row g-4">
                <h3>Calificaciones</h3>
                <% if (calificaciones && calificaciones.length > 0) { %>
                    <% calificaciones.forEach(cal => { %>
                        <div class="col-md-4"> <!-- Columna para cada tarjeta -->
                            <div class="card p-3">
                                <h3><%= cal.nombre_curso %></h3>
                                <hr>
                                <p><%= cal.detalles %></p>
                                <div class="mb-2">
                                    <h4>Calificaci√≥n</h4>
                                    <p>
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <% if (i <= cal.calificacion) { %>
                                                <i class="bi bi-star-fill text-warning"></i>
                                            <% } else { %>
                                                <i class="bi bi-star text-warning"></i>
                                            <% } %>
                                        <% } %>
                                    </p>
                                </div>
                                
                                <div class="d-flex justify-content-center">
                                    <a href="/editarOpinion/<%= cal.id %>" class="btn btn-primary btn-sm me-2">Editar</a>
                                    <a href="/borrarOpinion/<%= cal.id %>" class="btn btn-secondary btn-sm">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No hay calificaciones disponibles</p>
                <% } %>
            </section>
        </main>
            
    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; 2024 Talentum. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts.js"></script> 
</body>
</html>