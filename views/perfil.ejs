<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- icono -->
    <link rel="icon" href="/resources/img/Mini_icono.png">
    <!-- titulo -->
    <title>Talentum</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- css -->
    <link rel="stylesheet" href="/resources/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="cursos">Cursos</a>
                    </li>
                </ul>
                <span class="navbar-text bienvenida">
                    TE DAMOS LA BIENVENIDA
                </span>
            </div>
        </div>
    </nav>
    <div>
        <h2>Perfil de <%= usuario.nickname %></h2> 
    </div>
    
    <!-- Calificaciones -->
    <div>
        <h3>Calificaciones</h3>
        <% if (calificaciones && calificaciones.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Curso</th>
                        <th>Calificación</th>
                        <th>Detalles</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% calificaciones.forEach(cal => { %>
                        <tr>
                            <td><%= cal.nombre_curso %></td>
                            <td><%= cal.calificacion %></td>
                            <td><%= cal.detalles %></td>
                            <td>
                                <a href="/perfil/<%= cal.id %>/editar">Editar</a> | 
                                <a href="/borrarOpinion/<%= cal.id %>">Eliminar</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No hay calificaciones disponibles</p>
        <% } %>
    </div>
    
    
    <a href="/logout">Cerrar Sesión</a>
</body>
</html>