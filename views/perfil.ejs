<!DOCTYPE html>
<html>
<head>
    <title>Perfil de Usuario</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#inicio">Cursos</a>
                    </li>
                </ul>
                <span class="navbar-text bienvenida">
                    TE DAMOS LA BIENVENIDA
                </span>
            </div>
        </div>
    </nav>
    <div>
        <h2>Perfil de <%= usuario.nickname %></h2> 
    </div>
    
    <!-- Calificaciones -->
    <div>
        <h3>Calificaciones</h3>
        <% if (calificaciones && calificaciones.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Curso</th>
                        <th>Calificación</th>
                        <th>Detalles</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% calificaciones.forEach(cal => { %>
                        <tr>
                            <td><%= cal.nombre_curso %></td>
                            <td><%= cal.calificacion %></td>
                            <td><%= cal.detalles %></td>
                            <td>
                                <a href="/perfil/<%= cal.id %>/editar">Editar</a> | 
                                <a href="/borrarOpinion/<%= cal.id %>">Eliminar</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No hay calificaciones disponibles</p>
        <% } %>
    </div>
    
    
    <a href="/logout">Cerrar Sesión</a>
</body>
</html>